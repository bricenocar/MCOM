{
    "email": "{{ content.Request.Requester.Email }}",
    "businessAreaId": {{ content.Request.Requester.BusinessAreaId }},
    "roleId": {{ content.Request.Requester.RoleId }},
    "purposes": [
        {% for purpose in content.Request.Purposes %}
            "{{ purpose }}"{% unless forloop.last %},{% endunless %}
        {% endfor %}
    ],
    "approverEmail": "{{ content.Request.Approver.Email }}",
    "approverComments": "{{ content.Request.Approver.Comments }}",
    "title": "{{ content.Site.SiteConfig.SiteName }}",
    "workloadid": "{{ content.Request.WorkloadId }}",
    {% if content.Site.SiteConfig.SiteType == 0 %}
        "siteurl": "{{ content.Site.SiteConfig.SiteURL }}",
    {% else %}
        "siteurl": "{{ content.Site.SiteConfig.Alias }}",
    {% endif %}
    "messageid": "{{ content.Request.MessageID }}"
}